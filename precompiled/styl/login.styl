.icon-logo
	margin auto 0 auto 101px
	height 60px
	width 45px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-left 30px
	@media screen and (max-width 959px)
		margin-left 20px

.footer, .main__header
	min-height 90px
	height 90px
	max-height 90px
.footer
	display unquote('flex')
	justify-content: space-between;
	@media screen and (max-width 959px)
		flex-direction: column-reverse;
		height 216px
		min-height 216px
		max-height 216px
		background: linear-gradient(180deg, #E0E9FD 0%, #EFF2FC 8.8%);
.main__header
	display unquote('flex')
	justify-content: space-between;
	@media screen and (max-width 959px)
		background white
.footer__right-block, .footer__left-block
	flex 1
	display unquote('flex')
	position relative
.footer__right-block
	justify-content: flex-end;
	@media screen and (max-width 959px)
		flex 3

.footer__right-block-box
	display unquote('flex')
	min-width 495px
	width 70%
	margin-right 100px
	@media screen and (max-width 959px)
		flex-direction column
		width 100%
		min-width 280px
		margin 40px 0 0 0
.footer__left-block
	margin auto 0 auto 101px
	@media screen and (max-width 959px)
		margin: auto;
		text-align center
		flex 1
		display unquote('block')
.sidebar__socials--darc, .sidebar__socials
	width 225px
	margin auto 0 auto auto
	padding 20px 0
	@media screen and (max-width 959px)
		margin: auto;
		// width 100%
.footer__support
	// display unquote('flex')
	margin auto auto auto 0
	@media screen and (max-width 959px)
		margin: auto;
		text-align: center;
.support__text
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 21px;
	color: #4A4469;

.support__email
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 16px;
	line-height: 24px;
	color: #4A4469;








.pop-up__content
	width 305px
	padding:  40px 40px 30px 40px
	flex-direction: column;
	justify-content: space-between;
	>div
		flex 1
	.button--blue
		margin-top: 20px;
.pop-up__button-box
	display: unquote('flex');
.pop-up__title
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	line-height: 33px;
	font-size: 21px;
	color: #221B48;
	text-align center
.pop-up__text
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 21px;
	text-align: center;
	color: #4A4469;
	&:nth-child(2)
		margin-top 20px
	span.email
		font-weight bold
		overflow-wrap: break-word;
	&.bold
		font-weight 600


