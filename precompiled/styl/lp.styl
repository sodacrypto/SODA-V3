		&:before
			content ""
			background url("/images/service-SODA.svg")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&[data-type="Maker"]
		&:before
			content ""
			background url("/images/service-Maker.svg")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&[data-type="dYdX"]
		&:before
			content ""
			background url("/images/service-dYdX.svg")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&[data-type="Nuo"]
		&:before
			content ""
			background url("/images/service-Nuo.svg")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&[data-type="Compound"]
		&:before
			content ""
			background url("/images/service-Compound.svg")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
