body 
	flex-direction: column;
	min-width: 320px;
.main
	min-height 934px
	flex 1
	background url("/images/lp-bg.svg")
	// background: linear-gradient(90deg, #4776E6 0%, #5754E9 100%);
	background-size: cover;
	background-repeat: no-repeat;
	display: unquote('flex');
	flex-direction: column;
	@media screen and (max-width 959px)
		height auto
		background white

.announce
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 14px;
	line-height: 14px;
	color: #221B48;
	text-align center
	padding 10px 0 0 0
	a
		color #5163E8
		text-decoration: none
		border-bottom: 1px dashed #5163E8;
	@media screen and (max-width 959px)
		background #5163E8
		color white
		padding 10px 0 14px 0
		a
			color #0FE7DC
			text-decoration: none
			border-bottom: 1px dashed #0FE7DC;


.main__content
	display unquote('flex')
	flex 1
	@media screen and (max-width 959px)
		flex-direction column
.range
	margin-top: 15px;
.icon-logo
	margin auto 0 auto 101px
	height 60px
	width 45px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-left 30px
	@media screen and (max-width 959px)
		margin-left 20px
.footer, .main__header
	min-height 90px
	height 90px
	max-height 90px
.footer
	margin-top 60px
	background: linear-gradient(180deg, #E0E9FD 0%, #EFF2FC 8.8%);
	display unquote('flex')
	justify-content: space-between;
	@media screen and (max-width 959px)
		margin-top 30px
		flex-direction: column-reverse;
		height 216px
		min-height 216px
		max-height 216px
		background: linear-gradient(180deg, #E0E9FD 0%, #EFF2FC 8.8%);
.main__header
	display unquote('flex')
	justify-content: space-between;
	@media screen and (max-width 959px)
		background white
.button-sign-up, .button-go-platform
	margin auto 100px auto 25px
	font-size: 16px;
	line-height: 24px;
	color: #EEF2FC;
	padding-left 30px
	padding-right 30px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-right 30px
	@media screen and (max-width 959px)
		margin-right 20px
		margin-left 10px
		padding-left 10px
		padding-right 10px
.button-go-platform
	text-decoration none
	display unquote('flex')
	span
		margin auto
	
.footer__right-block, .footer__left-block
	flex 1
	display unquote('flex')
	position relative
.footer__right-block
	justify-content: flex-end;
	@media screen and (max-width 959px)
		flex 3

.footer__right-block-box
	display unquote('flex')
	flex 1
	margin-right 100px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-right 30px
	@media screen and (max-width 959px)
		flex-direction column
		width 100%
		min-width 280px
		margin 40px 0 0 0
.footer__left-block
	margin auto -70px auto 101px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin auto 0 auto 30px
	@media screen and (max-width 959px)
		margin: auto;
		text-align center
		flex 1
		display unquote('block')
.sidebar__socials--darc, .sidebar__socials
	width 225px
	margin auto 0 auto auto
	padding 20px 0
	@media screen and (max-width 959px)
		margin: auto;
.footer__support
	margin auto auto auto 0
	@media screen and (max-width 959px)
		margin: auto;
		text-align: center;
.support__text
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 21px;
	color: #4A4469;

.support__email
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 16px;
	line-height: 24px;
	color: #4A4469;


.sign-in-and-sign-up-box
	display unquote('flex')
.imitation-button--sign-in
	height 45px
	margin auto
	display unquote('flex')
	cursor pointer
	margin auto 25px
	@media screen and (max-width 959px)
		margin auto 15px
.imitation-button__text--sign-in
	margin auto
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 16px;
	line-height: 24px;
	color: #221B48;

.box-with-services, .box-with-form
	display unquote('flex')
	flex 1
	position relative
	@media screen and (max-width 959px)
		flex none
.box-with-services
	@media screen and (max-width 959px)
		background url("/images/lp-bg.svg")
		background-size: cover;
		background-repeat: no-repeat;
		height 649px

.services
	margin auto auto auto 101px
	display: unquote('flex');
	flex-direction: column;
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-left 30px
	@media screen and (max-width 959px)
		margin auto 20px auto 20px
		flex 1

.services__title
	font-family: Futura PT;
	font-style: normal;
	font-weight: bold;
	font-size: 42px;
	line-height: 54px;
	color: #221B48;
	@media screen and (max-width 959px)
		font-size: 26px;
		line-height: 36px;


.services-box
	margin-top 50px
	flex: 1;
	display: unquote('flex')
	flex-direction: column;
.service
	margin-bottom 10px
	width 70%
	height 50px
	min-width 360px
	background: #F7FBFD;
	box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
	border-radius: 5px;
	display: unquote('flex')
	&:last-child
		margin-bottom 0
	&:nth-child(1)
		height 60px
		background: linear-gradient(180deg, #FFFFFF 0%, #F8FCFF 100%), #EEF2FC;
		box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.2);
		border-radius: 5px;
	@media screen and (min-width 960px) and (max-width 1299px)
		width 95%
		min-width 95%
		min-width 344px
	@media screen and (max-width 959px)
		width 100%
		min-width 280px
		height 40px


.form-take-loan
	background: white
	box-shadow: 0px 8px 20px rgba(34, 27, 72, 0.15);
	border-radius: 5px;
	min-width 455px
	width: 70%;
	margin auto 100px auto auto
	display: unquote('flex');
	flex-direction: column;
	overflow hidden
	.button--yellow
		margin-right 40px
		margin-left 40px
		@media screen and (max-width 959px)
			margin-right 20px
			margin-left 20px
	@media screen and (min-width 960px) and (max-width 1299px)
		margin-right 30px
		min-width 285px
	@media screen and (max-width 959px)
		margin 0
		width 100%
		min-width 280px
		border-radius 0
		min-height 720px
		box-shadow none
		background white
		overflow visible
.form__title
	margin 30px 40px 0px 40px
	@media screen and (max-width 959px)
		margin 40px 20px 0 20px


.take-loan__notification
	background #5163E8
	padding 10px 10px 11px 10px
	text-align center
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 14px;
	line-height: 14px;
	color white
	margin-top 20px
	@media screen and (max-width 959px)
		margin: 20px 20px 0 20px;
		border-radius: 5px 5px 0 0;
		line-height: 18px;
		padding-bottom 10px

.take-loan__calculator
	margin: 0 40px 5px 40px
	@media screen and (max-width 959px)
		margin: 0 20px 5px 20px
.take-loan__button-box
	display unquote('flex')
.input-with-currency
	margin-top 10px
.calculator__elem-box
	flex 1
	margin-top 20px
.calculator__elems-box
	margin-top 5px
	&:nth-child(2)
		flex-direction row
		display unquote('flex')
		@media screen and (min-width 960px) and (max-width 1299px)
			flex-direction column
			.calculator__elem-box:nth-child(1)
				.count
					margin-bottom 0
		@media screen and (max-width 959px)
			flex-direction column
			.calculator__elem-box:nth-child(1)
				.count
					margin-bottom 0
		.calculator__content
			margin-top 10px
.count[data-currency="BTC"]:before, .count[data-currency="DAI"]:before
	margin: 4px auto auto -30px;
.features-container
	flex 1
	display unquote('flex') 
	background: linear-gradient(180deg, #E6EDFF 0%, rgba(237, 242, 252, 0) 11.38%), #F3F8FB;
	padding 50px 40px 20px 40px
	// border-radius: 0px 0px 5px 5px;
	@media screen and (min-width 960px) and (max-width 1299px)
		flex-direction column
		padding 20px 30px 20px 45px
	@media screen and (max-width 959px)
		flex-direction column
		min-height: 123px;
		padding 20px 30px 20px 55px
		margin 20px
		background white
		border: 1px solid #CCD9F8;
		box-sizing: border-box;
		// border-radius: 5px;
		//new
		margin-top: 0;
	    border-radius: 0 0 5px 5px;

.feature
	flex 1
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 21px;
	text-align: center;
	color: #4A4469;
	position relative
	@media screen and (min-width 960px) and (max-width 1299px)
		text-align left
		margin-left: 20px;
		br
			display none
	@media screen and (max-width 959px)
		text-align left
		br
			display none
	&:nth-child(2)
		margin: 0 20px;
		@media screen and (min-width 960px) and (max-width 1299px)
			margin 10px 20px
		@media screen and (max-width 959px)
			margin 10px 0
	&:before
		content ""
		height 10px
		width 10px
		position absolute
		border-radius 5px
		background #FFD200
		left: 50%;
		transform: translate(-50%, -50%);
		top -15px
		@media screen and (min-width 960px) and (max-width 1299px)
			top 10px
			left -20px
		@media screen and (max-width 959px)
			top 10px
			left -20px
			

