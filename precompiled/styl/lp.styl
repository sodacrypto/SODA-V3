.service-top
	.service__title
		font-family: Futura PT;
		font-style: normal;
		font-weight: 600;
		font-size: 16px;
		line-height: 24px;
		color: #221B48;
	.service__percent
		font-family: Futura PT;
		font-style: normal;
		font-weight: bold;
		font-size: 18px;
		line-height: 24px;
		color: #221B48;
	&:after
		background url("/images/triangle-green.svg")
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;

.service__title
	margin auto 0 auto 65px
	font-family: Futura PT;
	font-style: normal;
	font-weight: 450;
	font-size: 16px;
	line-height: 24px;
	align-items: center;
	color: #9F9EB2;

.service__percent
	font-family: Futura PT;
	font-style: normal;
	font-weight: 450;
	font-size: 18px;
	line-height: 24px;
	text-align: right;
	color: #9F9EB2;
	margin auto 35px auto 0
	position relative
	&[data-type]
		&:after
			content attr(data-type)
			margin-left: .25em;
			font-weight: 450;

		





.pop-up
	display unquote('none')
	background rgba(34,27,72,0.5)
	z-index 15
	&.open
		position fixed
		top 0
		left 0
		height 100%
		width 100%
		display unquote('flex')
.waitlist
	margin auto
	width 305px
	background: linear-gradient(180deg, #FFFFFF 0%, #ECF4F9 100%), #EEF2FC;
	box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.4);
	border-radius: 5px;
	padding: 15px 15px 25px 15px
	display: unquote('flex');

.waitlist__title
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	line-height: 33px;
	font-size: 21px;
	color: #221B48;
	text-align center


#waitlist-form
	flex 1
	display: unquote('flex');
	flex-direction: column;
	justify-content: space-between;
	.button--yellow, .button--blue
		margin-left 0
		margin-right 0
	.button--blue
		margin-top: 20px;
	.calculator__title
		text-align center
	span.bold
		font-weight 600
		





.lang-box
	@media screen and (max-width 959px)
		margin auto 0

.user-panel
	flex: 1;
	display: unquote('flex');
	justify-content: flex-end;


.additional-block
	margin: 50px 100px 20px 101px;
	@media screen and (max-width 959px)
		margin: 25px 20px 20px 20px;
	@media screen and (min-width 960px) and (max-width 1299px)
		margin: 35px 30px 20px 30px;
	&[data-type="team"]
		.additional-block__title.team
			color: #4A6EE6;
			border-bottom: 1px dashed #5163E8;
		.additional-block__FAQ
			display none
	&[data-type="faq"]
		.additional-block__title.faq
			color: #4A6EE6;
			border-bottom: 1px dashed #5163E8;
		.additional-block__team
			display none

.additional-block__FAQ
	margin-top 30px
	@media screen and (max-width 959px)
		margin-top 20px
.additional-block__titles
	display unquote('flex')
.additional-block__title
	font-family: Futura PT;
	font-style: normal;
	font-weight: bold;
	font-size: 18px;
	line-height: 23px;
	color: #221B48;
	margin-right 40px
	cursor pointer
	@media screen and (max-width 959px)
		margin-right 30px

.additional-block__team
	display unquote('flex')
	flex-flow: row wrap;
	margin-top: 50px;
	@media screen and (max-width 959px)
		margin-top 0
.team-person
	width: 50%;
	box-sizing: border-box;
	position relative
	&:nth-child(n+3)
		margin-top 75px
	&:nth-child(2n+1)
		padding-right: 20px;
		padding-left 140px
	&:nth-child(2n)
		padding-left 160px
	@media screen and (max-width 959px)
		width: 100%;
		padding 0 !important
		margin-top 170px  !important
	&:before
		content ""
		height 118px
		width 110px
		position absolute
		border-radius 5px
		margin-left: -140px;
		@media screen and (max-width 959px)
			transform: translate(-50%, -100%);
			margin-left 0
			left 50%
		@media screen and (max-width 959px)
			height 128px
			width 120px
	&.max-tarasenko
		&:before
			background url("/images/max-tarasenko.png")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&.pavel-tarasenko
		&:before
			background url("/images/pavel-tarasenko.png")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&.dan-gavrilin
		&:before
			background url("/images/dan-gavrilin.png")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
	&.daria-gavrilina
		&:before
			background url("/images/daria-gavrilina-rr55-3.png")
			background-size: contain;
			background-repeat: no-repeat;
			background-position: center;
		
	
.team-person__name
	font-family: Futura PT;
	font-style: normal;
	font-weight: 600;
	font-size: 18px;
	line-height: 27px;
	color: #221b48;
	@media screen and (max-width 959px)
		margin-top: 15px;
		margin-bottom: 5px;
		text-align center


.team-person__content
	text-align: justify;
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 14px;
	line-height: 21px;
	color: #4a4469;
	a
		word-wrap: break-word;
		color #5163e8


.faq-box
	margin-top 10px
	&.open
		.faq-box__title
			color: #5163E8;
			border-color #5163E8
			&:before
				background url("/images/down--blue-top.svg")
				background-size: contain;
				background-repeat: no-repeat;
				background-position: center;
		.faq-box__content
			opacity 1
			display block
			height: auto;

.faq-box__title
	font-family: Futura PT;
	font-style: normal;
	font-weight: 450;
	font-size: 16px;
	line-height: 24px;
	color: #221B48;
	border-bottom: 1px dashed #221B48;
	display: inline;
	padding-left: 21px;
	position relative
	cursor pointer
	transition: color 0.4s, border-color .4s
	@media screen and (max-width 959px)
		border-bottom none
		display block
	&:before
		content ""
		height 6px
		width 11px
		background url("/images/down.svg")
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		position absolute
		margin-left -21px
		margin-top 9px
		transition: background 0.4s

.faq-box__content
	font-family: Futura PT;
	font-style: normal;
	font-weight: normal;
	font-size: 16px;
	line-height: 24px;
	color: #4A4469;
	margin-top: 10px;
	display none
	opacity 0
	height 0
	transition: visibility 0.4s, height .4s
	text-align: justify;
	a
		color #5163E8
	.italic
		font-style: italic;

.sidebar__socials--darc
	width 240px