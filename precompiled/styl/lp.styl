.service
	justify-content: space-between;
	position relative
	&:after
		content ""
		height 100%
		width 10px
		background url("/images/triangle-red.svg")
		background-size: contain;
		background-repeat: no-repeat;
		background-position: center;
		position: absolute;
		margin-right: 10px;
		right: 0;
	&:before
		width 55px
		height 100%
		position absolute
		margin: 2px 0 0 2px;
